<p id="notice"><%= notice %></p>

<h1>Listing Starships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Crew Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @starships.each do |starship| %>
      <tr>
        <td><%= starship.name %></td>
        <td>
          <% starship.crew_members.each do |cm| %>
            <%= cm.name %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', starship %></td>
        <td><%= link_to 'Edit', edit_starship_path(starship) %></td>
        <td><%= link_to 'Destroy', starship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>  
Starships with Holodeck Programs named Robin Hood<br>
<% @starships_with_robin_hood_hp.each do |starship| %>
  <%= starship.name %><br>
<% end %>

